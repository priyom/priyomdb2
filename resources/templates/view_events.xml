<?xml version="1.0"?>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tea="https://xmlns.zombofant.net/xsltea/processors"
      xmlns:exec="https://xmlns.zombofant.net/xsltea/exec"
      xmlns:i18n="https://xmlns.zombofant.net/xsltea/i18n"
      xmlns:auth="https://xmlns.zombofant.net/xsltea/auth"
      xmlns:sitemap="https://xmlns.zombofant.net/xsltea/sitemap"
      xmlns:priyom="https://xmlns.zombofant.net/xsltea/priyom">
  <head>
    <title>View events</title>
    <tea:include tea:source="stylesheets.xml"
                 tea:xpath="h:link"
                 tea:nsmap="{'h': 'http://www.w3.org/1999/xhtml'}"/>
  </head>
  <body>
    <exec:code>view_events = arguments['view_events']</exec:code>
    <exec:code>edit_event = arguments['edit_event']</exec:code>
    <exec:code>view_station = arguments['view_station']</exec:code>
    <exec:code>view = arguments['view']</exec:code>
    <tea:include tea:source="nav.xml" />
    <main>
      <h2>Events</h2>
      <aside class="sidebar"><div class="sbox">
        <div class="ym-grid linearize-sidebar">
          <div class="ym-g50 ym-gl"><div class="ym-gbox">
          </div></div>
          <div class="ym-g50 ym-gr"><div class="ym-gbox">
            <tea:if exec:eval="view.f">
              <h3>Filters</h3>
              <tea:call tea:src="library.xml" tea:name="filters">
                <tea:pass name="page">view</tea:pass>
                <tea:pass name="view">view_events</tea:pass>
              </tea:call>
            </tea:if>
          </div></div>
        </div>
      </div></aside>
      <tea:call tea:src="library.xml" tea:name="pagination">
        <tea:pass name="page">view</tea:pass>
        <tea:pass name="view">view_events</tea:pass>
      </tea:call>
      <priyom:sortable-table priyom:pageobj="view" priyom:viewobj="view_events">
        <colgroup>
          <col class="id" name="id" />
          <col class="modified" name="modified" />
          <col name="station" />
          <col name="submitter" />
          <col name="start_time" />
          <col />
          <col class="actions" style="width: 20em;" />
        </colgroup>
        <thead>
          <tr>
            <th>#</th>
            <th>Modified</th>
            <th>Station</th>
            <th>Submitter</th>
            <th>Start time</th>
            <th>Contents</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <tea:for-each tea:bind="event, id, modified, _, station_obj, station, submitter_id, submitter, start_time"
                        tea:from="view">
            <tr>
              <td><exec:text>id</exec:text></td>
              <td><i18n:datetime>modified</i18n:datetime></td>
              <td>
                <a exec:href="context.href(view_station, station_id=station_obj.id)">
                  <exec:text>station_obj</exec:text>
                </a>
              </td>
              <td>
                <exec:text>submitter or 'system generated'</exec:text>
              </td>
              <td><i18n:datetime>start_time</i18n:datetime></td>
              <td class="tx-content">
                <tea:call tea:src="library.xml" tea:name="event_contents">
                  <tea:pass name="event">event</tea:pass>
                </tea:call>
              </td>
              <td>
                <exec:code>can_edit = context.request.auth.has_capability(Capability.EDIT_EVENT)</exec:code>
                <a exec:href="context.href(edit_event, event_id=id) if edit_event is not None else '#'"
                   exec:class="'ym-button ym-primary'+
                               (' ym-edit' if can_edit else '')">
                  <exec:text>'Edit' if can_edit else 'View'</exec:text>
                </a>
                <tea:if auth:cap="DELETE_EVENT">
                  <a href="#"
                     class="ym-button ym-danger ym-delete ym-small">Delete</a>
                </tea:if>
             </td>
            </tr>
          </tea:for-each>
        </tbody>
      </priyom:sortable-table>
      <tea:call tea:src="library.xml" tea:name="pagination">
        <tea:pass name="page">view</tea:pass>
        <tea:pass name="view">view_events</tea:pass>
      </tea:call>
    </main>
  </body>
</html>

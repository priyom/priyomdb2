<?xml version="1.0"?>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tea="https://xmlns.zombofant.net/xsltea/processors"
      xmlns:exec="https://xmlns.zombofant.net/xsltea/exec"
      xmlns:sitemap="https://xmlns.zombofant.net/xsltea/sitemap"
      xmlns:form="https://xmlns.zombofant.net/xsltea/form">
  <head>
    <title>Edit format</title>
    <tea:include tea:source="stylesheets.xml"
                 tea:xpath="h:link"
                 tea:nsmap="{'h': 'http://www.w3.org/1999/xhtml'}"/>
  </head>
  <body>
    <exec:code>form = arguments['form']</exec:code>
    <tea:def tea:name="subtree">
      <tea:arg name="node" />
      <tea:arg name="level" default="0" />
      <tr form:form="node">
        <td exec:style="'padding-left: {}px'.format(level*12)">
          <div class="ym-fbox">
            <label form:for-field="comment">Comment</label>
            <input type="text"
                   form:field="comment" />
          </div>
          <div class="ym-fbox">
            <label form:for-field="key">Key</label>
            <input type="text"
                   form:field="key" />
          </div>
        </td>
        <tea:include tea:source="format_form_controls_column.xml"/>
      </tr>
      <exec:code>children = node.children</exec:code>
      <exec:code>child_level = level + 1</exec:code>
      <tea:for-each tea:bind="child" tea:from="children">
        <tea:call tea:name="subtree">
          <tea:pass name="node">child</tea:pass>
          <tea:pass name="level">child_level</tea:pass>
        </tea:call>
      </tea:for-each>
    </tea:def>
    <tea:include tea:source="nav.xml" />
    <main>
      <h2>Edit transmission format</h2>
      <exec:if condition="arguments['has_users']">
        <p class="box warning">
          <strong>Warning:</strong>
          This format has users. This implies that you cannot modify it. You
          can, however, save a copy of the format.
        </p>
      </exec:if>
      <form class="ym-form" method="POST" name="format" form:form="form">
        <h6 class="ym-fbox-heading">General properties</h6>
        <div class="ym-fbox">
          <label for="display-name">Display name</label>
          <input type="text" id="display-name"
                 form:field="display_name"
                 placeholder="e.g. S28 default format"/>
        </div>
        <div class="ym-fbox">
          <label for="description">Description</label>
          <textarea id="description" form:field="description" />
        </div>
        <p class="ym-fbox-footer warning"><strong>Warning:</strong> Until you click “Save to database” below, <em>no</em> changes are made to the entries in the database. Leaving the page without saving will make you lose all your changes!</p>
        <div class="ym-fbox-footer ym-fbox-button">
          <button type="submit"
                  form:action="update"
                  class="ym-button ym-reload">Update / Check for errors</button>
        </div>
        <h6 class="ym-fbox-heading">Parsing tree</h6>
        <table class="ym-fbox parsing-tree">
          <colgroup>
            <col class="parsing-tree-key" />
          </colgroup>
          <thead>
            <tr>
              <th>Format node</th>
              <th>Controls</th>
            </tr>
          </thead>
          <tbody>
            <tea:call tea:name="subtree">
              <tea:pass name="node">form</tea:pass>
            </tea:call>
          </tbody>
        </table>
        <div class="ym-fbox-footer ym-fbox-button">
          <exec:if condition="not arguments['has_users']">
            <button type="submit"
                    form:action="save_to_db"
                    class="ym-button ym-primary ym-save">Save to database</button>
          </exec:if>
          <button type="submit"
                  form:action="save_copy"
                  class="ym-button ym-add">Save as copy</button>
        </div>
      </form>
    </main>
  </body>
</html>

<?xml version="1.0"?>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tea="https://xmlns.zombofant.net/xsltea/processors"
      xmlns:exec="https://xmlns.zombofant.net/xsltea/exec"
      xmlns:sitemap="https://xmlns.zombofant.net/xsltea/sitemap"
      xmlns:form="https://xmlns.zombofant.net/xsltea/form">
  <head>
    <title>Edit station</title>
    <tea:include tea:source="stylesheets.xml"
                 tea:xpath="h:link"
                 tea:nsmap="{'h': 'http://www.w3.org/1999/xhtml'}"/>
  </head>
  <body>
    <exec:code>form = arguments['form']</exec:code>
    <tea:include tea:source="nav.xml" />
    <main>
      <div class="ym-wrapper"><div class="ym-wbox">
        <h2>Edit station</h2>
        <form class="ym-form" method="POST" name="format" form:form="form">
          <h6 class="ym-fbox-heading">Station properties</h6>
          <tea:call tea:src="library.xml" tea:name="errors">
            <tea:pass name="field">None</tea:pass>
          </tea:call>
          <div class="ym-fbox">
            <label for="enigma-id">Enigma Identifier</label>
            <input type="text" id="enigma-id"
                   placeholder="e.g. S28"
                   form:field="enigma_id"/>
          </div>
          <tea:call tea:src="library.xml" tea:name="errors">
            <tea:pass name="field">'enigma_id'</tea:pass>
          </tea:call>
          <div class="ym-fbox">
            <label for="priyom-id">Priyom Identifier</label>
            <input type="text" id="priyom-id"
                   form:field="priyom_id"/>
          </div>
          <tea:call tea:src="library.xml" tea:name="errors">
            <tea:pass name="field">'priyom_id'</tea:pass>
          </tea:call>
          <div class="ym-fbox">
            <label for="nickname">Nickname</label>
            <input type="text" id="nickname"
                   form:field="nickname"/>
          </div>
          <tea:call tea:src="library.xml" tea:name="errors">
            <tea:pass name="field">'nickname'</tea:pass>
          </tea:call>
          <div class="ym-fbox">
            <label for="description">Description</label>
            <textarea id="description" form:field="description"/>
          </div>
          <tea:call tea:src="library.xml" tea:name="errors">
            <tea:pass name="field">'description'</tea:pass>
          </tea:call>
          <div class="ym-fbox-footer ym-fbox-button">
            <input type="submit"
                   name="action:save"
                   value="Update"
                   class="ym-primary" />
          </div>
        </form>
        <exec:if condition="form.id">
          <tea:include tea:source="station_event_view.xml" />
        </exec:if>
      </div></div>
    </main>
  </body>
</html>

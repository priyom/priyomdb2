<?xml version="1.0"?>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tea="https://xmlns.zombofant.net/xsltea/processors"
      xmlns:exec="https://xmlns.zombofant.net/xsltea/exec"
      xmlns:sitemap="https://xmlns.zombofant.net/xsltea/sitemap"
      xmlns:form="https://xmlns.zombofant.net/xsltea/form">
  <head>
    <title>Edit format</title>
    <tea:include tea:source="stylesheets.xml"
                 tea:xpath="h:link"
                 tea:nsmap="{'h': 'http://www.w3.org/1999/xhtml'}"/>
  </head>
  <body>
    <exec:code>form = arguments['form']</exec:code>
    <exec:code>view_events = arguments['view_events']</exec:code>
    <exec:code>event_view = arguments['event_view']</exec:code>
    <tea:include tea:source="nav.xml" />
    <main>
      <div class="ym-wrapper"><div class="ym-wbox">
        <h2>Edit station</h2>
        <form class="ym-form" method="POST" name="format" form:form="form">
          <h6 class="ym-fbox-heading">Station properties</h6>
          <tea:call tea:src="library.xml" tea:name="errors">
            <tea:pass name="field">None</tea:pass>
          </tea:call>
          <div class="ym-fbox">
            <label for="enigma-id">Enigma Identifier</label>
            <input type="text" id="enigma-id"
                   placeholder="e.g. S28"
                   form:field="enigma_id"/>
          </div>
          <tea:call tea:src="library.xml" tea:name="errors">
            <tea:pass name="field">'enigma_id'</tea:pass>
          </tea:call>
          <div class="ym-fbox">
            <label for="priyom-id">Priyom Identifier</label>
            <input type="text" id="priyom-id"
                   form:field="priyom_id"/>
          </div>
          <tea:call tea:src="library.xml" tea:name="errors">
            <tea:pass name="field">'priyom_id'</tea:pass>
          </tea:call>
          <div class="ym-fbox">
            <label for="nickname">Nickname</label>
            <input type="text" id="nickname"
                   form:field="nickname"/>
          </div>
          <tea:call tea:src="library.xml" tea:name="errors">
            <tea:pass name="field">'nickname'</tea:pass>
          </tea:call>
          <div class="ym-fbox">
            <label for="description">Description</label>
            <textarea id="description" form:field="description"/>
          </div>
          <tea:call tea:src="library.xml" tea:name="errors">
            <tea:pass name="field">'description'</tea:pass>
          </tea:call>
          <div class="ym-fbox-footer ym-fbox-button">
            <input type="submit"
                   name="action:save"
                   value="Update"
                   class="ym-primary" />
          </div>
        </form>
        <exec:if condition="form.id">
          <exec:code>recent_events = arguments['recent_events']</exec:code>
          <h2>Most recent events</h2>
          <aside class="sidebar"><div class="sbox">
            <a exec:href="href(view_events, view=event_view)"
               class="ym-button ym-reply">View all</a>
          </div></aside>
          <table>
            <colgroup>
              <col />
              <col />
              <col />
              <col />
            </colgroup>
            <thead>
              <th>#</th>
              <th>Modified</th>
              <th>Submitter</th>
              <th>Timestamp</th>
              <th>Contents</th>
              <th>Actions</th>
            </thead>
            <tbody>
              <tea:for-each tea:bind="event" tea:from="recent_events">
                <tr>
                  <td><exec:text>event.id</exec:text></td>
                  <td><exec:text>event.modified</exec:text></td>
                  <td>
                    <exec:if condition="event.submitter">
                      <exec:text>event.submitter</exec:text>
                    </exec:if>
                    <exec:if condition="not event.submitter">system generated</exec:if>
                  </td>
                  <td><exec:text>event.start_time</exec:text></td>
                  <td class="tx-content">
                    <tea:call tea:src="library.xml" tea:name="event_contents">
                      <tea:pass name="event">event</tea:pass>
                    </tea:call>
                  </td>
                  <td>
                    <exec:code>is_admin = request.auth and request.auth.user.has_capability('admin')</exec:code>
                    <a exec:class="'ym-button ym-primary '+
                                   ('ym-edit' if is_admin else '')"
                       href="#">
                      <exec:text>'Edit' if is_admin else 'View'</exec:text>
                    </a>
                  </td>
                </tr>
              </tea:for-each>
            </tbody>
          </table>
        </exec:if>
      </div></div>
    </main>
  </body>
</html>

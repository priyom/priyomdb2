<?xml version="1.0"?>
<form xmlns="http://www.w3.org/1999/xhtml"
      xmlns:exec="https://xmlns.zombofant.net/xsltea/exec"
      xmlns:form="https://xmlns.zombofant.net/xsltea/form"
      xmlns:i18n="https://xmlns.zombofant.net/xsltea/i18n"
      xmlns:tea="https://xmlns.zombofant.net/xsltea/processors"
      class="ym-form"
      form:form="signup_form"
      exec:action="context.href(signup)"
      method="POST">
  <div class="ym-fbox">
    <div class="ym-grid linearize-level-1">
      <div class="ym-gr ym-g50"><div class="ym-gbox">
        <p><i18n:_>account.loginname.hint</i18n:_></p>
      </div></div>
      <div class="ym-gl ym-g50"><div class="ym-gbox">
        <label form:for-field="loginname"><i18n:_>account.loginname</i18n:_></label>
        <input type="text" form:field="loginname" />
        <tea:call tea:src="library.xml" tea:name="errors">
          <tea:pass name="field">'loginname'</tea:pass>
        </tea:call>
        <label form:for-field="email"><i18n:_>account.email</i18n:_></label>
        <input type="text" form:field="email" />
        <tea:call tea:src="library.xml" tea:name="errors">
          <tea:pass name="field">'email'</tea:pass>
        </tea:call>
      </div></div>
    </div>
  </div>
  <div class="ym-fbox">
    <div class="ym-grid linearize-level-1">
      <div class="ym-gr ym-g50"><div class="ym-gbox">
        <p><i18n:_>account.password.hint1</i18n:_></p>
        <ul>
          <li><i18n:_>account.password.hint2</i18n:_></li>
          <li><i18n:_>account.password.hint3</i18n:_></li>
        </ul>
      </div></div>
      <div class="ym-gl ym-g50"><div class="ym-gbox">
        <label form:for-field="password"><i18n:_>account.password</i18n:_></label>
        <input type="password" form:field="password" />
        <tea:call tea:src="library.xml" tea:name="errors">
          <tea:pass name="field">'password'</tea:pass>
        </tea:call>
        <label form:for-field="password_confirm"><i18n:_>account.password_confirm</i18n:_></label>
        <input type="password" form:field="password_confirm" />
        <tea:call tea:src="library.xml" tea:name="errors">
          <tea:pass name="field">'password_confirm'</tea:pass>
        </tea:call>
      </div></div>
    </div>
  </div>
  <div class="ym-fbox-footer ym-fbox-button">
    <button type="submit"
            form:action="signup"
            class="ym-button ym-primary ym-success ym-large">
      <i18n:_>signup.submit</i18n:_>
    </button>
  </div>
</form>

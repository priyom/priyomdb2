<?xml version="1.0"?>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tea="https://xmlns.zombofant.net/xsltea/processors"
      xmlns:exec="https://xmlns.zombofant.net/xsltea/exec"
      xmlns:sitemap="https://xmlns.zombofant.net/xsltea/sitemap"
      xmlns:priyom="https://xmlns.zombofant.net/xsltea/priyom">
  <head>
    <title>View stations</title>
    <tea:include tea:source="stylesheets.xml"
                 tea:xpath="h:link"
                 tea:nsmap="{'h': 'http://www.w3.org/1999/xhtml'}"/>
  </head>
  <body>
    <exec:code>view_stations = arguments['view_stations']</exec:code>
    <exec:code>page = arguments['page']</exec:code>
    <exec:code>view_station = arguments['view_station']</exec:code>
    <exec:code>delete_station = arguments['delete_station']</exec:code>
    <exec:code>is_admin = request.auth and request.auth.user.has_capability('admin')</exec:code>
    <tea:include tea:source="nav.xml" />
    <main>
      <div class="ym-wrapper"><div class="ym-wbox">
        <h2>Stations</h2>
        <tea:call tea:src="library.xml" tea:name="pagination">
          <tea:pass name="page">page</tea:pass>
          <tea:pass name="view">view_stations</tea:pass>
        </tea:call>
        <priyom:sortable-table priyom:pageobj="page" priyom:viewobj="view_stations">
          <colgroup>
            <col class="id" name="id" />
            <col class="modified" name="modified" />
            <col class="enigma_id" name="enigma_id" />
            <col class="priyom_id" name="priyom_id" />
            <col name="nickname" />
            <col class="actions" style="width: 20em;" />
          </colgroup>
          <thead>
            <tr>
              <th>#</th>
              <th>Modified</th>
              <th>Enigma ID</th>
              <th>Priyom ID</th>
              <th>Nickname</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <tea:for-each tea:bind="station" tea:from="arguments['stations']">
              <tr>
                <td><exec:text>station.id</exec:text></td>
                <td><exec:text>station.modified.strftime("%Y-%m-%dT%H:%M:%SZ")</exec:text></td>
                <td><exec:text>station.enigma_id or ''</exec:text></td>
                <td><exec:text>station.priyom_id or ''</exec:text></td>
                <td><exec:text>station.nickname or ''</exec:text></td>
                <td>
                  <a exec:href="href(view_station, station_id=station.id)"
                     exec:class="'ym-button ym-primary'+
                                 (' ym-edit' if request.auth else '')">
                    <exec:text>'Edit' if request.auth else 'View'</exec:text>
                  </a>
                  <exec:if condition="is_admin">
                    <a exec:href="href(delete_station, station_id=station.id)"
                       class="ym-button ym-danger ym-delete">Delete</a>
                  </exec:if>
                </td>
              </tr>
            </tea:for-each>
          </tbody>
        </priyom:sortable-table>
        <tea:call tea:src="library.xml" tea:name="pagination">
          <tea:pass name="page">page</tea:pass>
          <tea:pass name="view">view_stations</tea:pass>
        </tea:call>
      </div></div>
    </main>
  </body>
</html>

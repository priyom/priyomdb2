<?xml version="1.0" ?>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:exec="https://xmlns.zombofant.net/xsltea/exec"
      xmlns:tea="https://xmlns.zombofant.net/xsltea/processors">
  <head>
    <title>PriyomAPI login</title>
  </head>
  <body>
    <h1>Login</h1>
    <form name="login" method="POST">
      <label for="name">
        User name: <input type="text" name="name" placeholder="e.g. franknord"/>
      </label><br />
      <label for="password">
        Password: <input type="password" name="password" />
      </label><br />
      <exec:if condition="'error' in arguments">
        <p><strong><exec:text>arguments['error']</exec:text></strong></p>
      </exec:if>
      <input type="submit" name="submit" value="Login"/>
    </form>
  </body>
</html>
